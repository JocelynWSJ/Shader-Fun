                start_uv.y = 0;
            }
            if (start_uv.y > 1) {
                start_uv.y = 1;
            }
            vec3 v_color = texture(u_RenderedTexture, start_uv).rgb;
            sum_color += v_color * u_Gaussian[11*r+c];

            start_uv.y += dy;
        }
        start_uv.x += dx;
        start_uv.y = fs_UV.y - 5 * dy;
    }
    color = sum_color;
